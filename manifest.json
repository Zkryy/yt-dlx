{
    "manifest_version": 3,
    "name": "YouTube Downloader",
    "version": "1.0",
    "permissions": [
      "downloads",
      "webRequest",
      "webRequestBlocking",
      "activeTab",
      "scripting"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html"
    },
    "host_permissions": [
      "*://*.youtube.com/*"
    ]
  }
  